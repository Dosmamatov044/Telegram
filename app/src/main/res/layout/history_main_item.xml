<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/material_drawer_background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/colorGray"
        >
        <TextView
             android:id="@+id/history_main_my_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мой статус"
             android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            />
            <TextView
                  android:id="@+id/history_main_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Нажмите,чтобы добавить новый статус"
                android:layout_marginTop="35dp"
                 android:layout_marginLeft="70dp"

                />

        <ImageView
           android:id="@+id/history_main_photo_my"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/cardview_dark_background"
           android:layout_marginTop="20dp"
            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        >
        <TextView

           android:id="@+id/history_main_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            />
        <TextView
           android:id="@+id/history_main_timeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="100dp"

            />

        <ImageView
            android:id="@+id/history_main_user_photo"
                        android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/cardview_dark_background"
            android:layout_marginTop="20dp"
            />

    </androidx.cardview.widget.CardView>






</androidx.cardview.widget.CardView>