<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="AppThemeLight" parent="MaterialDrawerTheme">
  <item name="colorControlActivated">@color/colorPrimary</item>
    <item name="material_drawer_background">@color/myFavouriteColor</item>
    <item name="material_drawer_primary_text">@color/colorBlack</item>
    <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
    <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
    <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
    <item name="material_drawer_divider">@color/material_drawer_divider</item>
    <item name="material_drawer_selected">@color/material_drawer_selected</item> <!-- Material 2 defines 12% alpha, primary color -->
    <item name="material_drawer_selected_legacy">@color/material_drawer_selected</item> <!-- Defines the color if legacy style (Material 1, is enabled) -->
    <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
    <item name="material_drawer_header_selection_text">@color/colorBackground</item>
    <item name="material_drawer_header_selection_subtext">@color/colorBlack</item>
    <item name="material_drawer_legacy_style">false</item> <!-- Enables legacy Material 1 style -->
</style>

    <style name="AppThemeDark" parent="MaterialDrawerTheme.Light">


    </style>

    <style name="normalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/material_drawer_account_header_horizontal_bottom</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="smallText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/material_drawer_account_header_horizontal_bottom</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="seperator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">@dimen/material_drawer_account_header_horizontal_bottom</item>
        <item name="android:layout_marginEnd">@dimen/material_drawer_account_header_horizontal_bottom</item>
        <item name="android:layout_marginTop">@dimen/app_small_margin</item>
        <item name="android:background">@color/colorGray</item>
    </style>

    <style name="settingsButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/app_small_margin</item>
         <item name="android:clickable">true</item>
       <item name="android:focusable">true</item>
        <item name="background">@drawable/ripple_effect</item>

    </style>

    <style name="mainToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/myFavouriteColor</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:padding">@dimen/appPadding</item>
        <item name="android:layout_margin">@dimen/material_drawer_account_header_horizontal_bottom</item>
        <item name="android:textSize">@dimen/normalText</item>
          <item name="android:textColorHint">@color/colorGray</item>
    </style>


</resources>